<?xml version="1.0" encoding="UTF-8"?>
<!--
  SpotBugs exclusion filter for Customer Registry.
  Keep this file minimal â€” only exclude well-justified false positives.
  Each exclusion must have a comment explaining why it is safe.
-->
<FindBugsFilter>
    <!--
      Suppress serialization warnings on Spring-managed beans.
      These classes are never serialized via Java serialization.
    -->
    <Match>
        <Bug pattern="SE_BAD_FIELD"/>
        <Package name="com.onefinancial.customer"/>
    </Match>

    <!--
      Suppress "unread field" warnings on JPA entity fields
      that are read by Hibernate via reflection.
    -->
    <Match>
        <Bug pattern="URF_UNREAD_FIELD"/>
        <Package name="com.onefinancial.customer.persistence"/>
    </Match>

    <!--
      Suppress "may expose internal representation" for record components.
      Java records are intentionally transparent data carriers.
    -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
        <Package name="com.onefinancial.customer.core.model"/>
    </Match>
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
        <Package name="com.onefinancial.customer.core.model"/>
    </Match>
</FindBugsFilter>
